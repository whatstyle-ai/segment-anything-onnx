from setuptools import find_packages, setup

def get_long_description():
    """Read long description from README"""
    with open("README.md", encoding="utf-8") as f:
        long_description = f.read()
    return long_description

setup(
    name="segment_anything_onnx",
    version="0.2.0",
    description="Use ONNX models for Segment Anything inference.",
    author="Mike Prince",
    author_email="vietanh.dev@gmail.com",
    url="https://github.com/whatstyle-ai/segment-anything-onnx",
    long_description=get_long_description(),
    long_description_content_type="text/markdown",
    install_requires=[],
    packages=find_packages(),
    extras_require={
        "all": [
            "torch",
            "torchvision",
            "opencv-python",
            "onnx",
            "onnxruntime",
            "timm",
        ],
        "dev": ["flake8", "isort", "black", "pre-commit"],
    },
)